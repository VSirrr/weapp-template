{
  "name": "weapp-template",
  "version": "0.1.0",
  "description": "a wechat miniprogram project template to start develop",
  "scripts": {
    "lint:fix": "npm run lint:eslint && npm run lint:prettier",
    "lint:eslint": "eslint --fix --ext .js",
    "lint:prettier": "prettier --write --loglevel warn '*.{js,json,md}'",
    "prepare": "husky install && chmod ug+x .husky/*"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/VSirrr/weapp-template.git"
  },
  "keywords": [
    "wechat",
    "weapp",
    "miniprogram"
  ],
  "author": "VSirrr",
  "license": "Apache License",
  "bugs": {
    "url": "https://github.com/VSirrr/weapp-template/issues"
  },
  "homepage": "https://github.com/VSirrr/weapp-template#readme",
  "dependencies": {
    "@vant/weapp": "^1.10.5"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-conventional": "^17.1.0",
    "eslint": "^8.23.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.{md,json}": [
      "prettier --write"
    ],
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "prettier": {
    "semi": true,
    "tabWidth": 2,
    "printWidth": 80,
    "useTabs": false,
    "endOfLine": "lf",
    "singleQuote": true,
    "proseWrap": "never",
    "trailingComma": "all",
    "arrowParens": "avoid",
    "bracketSpacing": true
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "commonjs": true,
      "es6": true
    },
    "extends": [
      "standard",
      "plugin:prettier/recommended"
    ],
    "plugins": [
      "prettier"
    ],
    "ignorePatterns": [
      "*.wxs",
      "/lib/**",
      "/node_modules/**",
      "/miniprogram_npm/**"
    ],
    "globals": {
      "wx": true,
      "App": true,
      "Page": true,
      "Component": true,
      "getApp": true,
      "getCurrentPages": true,
      "Behavior": true,
      "global": true,
      "__wxConfig": true
    },
    "rules": {
      "prettier/prettier": "error"
    }
  }
}
